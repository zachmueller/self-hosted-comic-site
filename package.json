{
  "name": "self-hosted-comic-site",
  "version": "0.1.0",
  "bin": {
    "self-hosted-comic-site": "bin/self-hosted-comic-site.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "generate-types": "typescript-json-schema tsconfig.json '*' --out specs/generated-schemas.json",
    "validate-schemas": "ajv validate -s specs/data-schemas.json -d 'test/fixtures/*.json'",
    "build-schemas": "json2ts specs/data-schemas.json > specs/data-schemas-generated.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/uuid": "^9.0.0",
    "aws-cdk": "2.1003.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-json-schema": "^0.62.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "aws-cdk-lib": "^2.182.0",
    "constructs": "^10.0.0",
    "uuid": "^9.0.0"
  }
}
